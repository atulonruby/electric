<div class="container blog_index">
  <div class="otherpages">
   <%= render :partial => "shared/sidebar"%>
   </div>
   <h1>Blog</h1>
  <div class="span8">
    <% @blogs.each do |blog|%>
    <div class="blog roundme">
    <div class="dates"><h4><%= blog.created_at.strftime("%B %d, %Y")%></h4></div>
    <h2><%= blog.title%></h2>
    <% if !blog.image.blank?%> <div class="padder"><%= image_tag blog.image %></div><% end%>
    <div class="padder"><%= mac_format blog.body%></div>
     </div>
    <% end %>
  </div>
  
</div>
