<div class="col-1-3">
  <% news.each do |news|%>
  <div class="news roundme"  style="background:#303030" >
  <h4> <%= news.created_at.strftime("%B %d, %Y")%></br></h4>
  <h2><%= news.title.capitalize%></br></h2>
  <div class="image" style="width:330px;border:1px solid black"><%= image_tag news.image_url%></br></div>
   <p><%= truncate(news.body, :length => 420)%></p></br>
  </div>
  <% end %>
</div>
<style>
.news {
  color:#FFF0F5;
}
</style>