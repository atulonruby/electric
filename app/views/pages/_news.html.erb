<div class="span4">
  <% news.each_with_index do |news,index|%>
  <%= content_tag :h1, "News" if index == 0%>
  <div class="news roundme"  >
  <h4> <%= news.created_at.strftime("%B %d, %Y")%></br></h4>
   <h2><%= news.title%></br></h2>
  <% if !news.image.blank?%><div style="border:1px solid black"><%= image_tag news.image_url%></br></div><% end%>
   <p><%= mac_format(truncate(news.body, :length => 420))%></p></br>
     <div class="readme "><p><%= link_to "read more..", news_path(:id => news.id)%></p></div>
  </div>
  <% end %>
</div>
