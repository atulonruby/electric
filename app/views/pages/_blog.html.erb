<div class="col-1-3">
  <% blogs.each do |blog|%>
  <div class="blog roundme" style="background:black" >
  <h4 > <%= blog.created_at.strftime("%B %d, %Y")%></br></h4>
  <h2><%= blog.title.capitalize%></br></h2>
  <div class="image" style="width:330px;border:1px solid black"><%= image_tag blog.image_url%></div></br>
   <p><%= truncate(blog.body, :length => 420)%></p></br>
  </div>
  <% end %>
</div>
<style>
.blog {
  color:#FFF0F5;
}
</style>
